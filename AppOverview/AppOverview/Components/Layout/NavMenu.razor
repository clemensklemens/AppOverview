@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AppOverview</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="entity-relations">
                <span class="bi bi-diagram-2-nav-menu" aria-hidden="true"></span> Entity Relations
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="entities">
                <span class="bi bi-diagram-3-nav-menu" aria-hidden="true"></span> Entities
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="departments">
                <span class="bi bi-building-nav-menu" aria-hidden="true"></span> Departments
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="entitytypes">
                <span class="bi bi-tags-nav-menu" aria-hidden="true"></span> Entity Types
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="technologies">
                <span class="bi bi-cpu-nav-menu" aria-hidden="true"></span> Technologies
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="bi bi-info-circle-nav-menu" aria-hidden="true"></span> About
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

