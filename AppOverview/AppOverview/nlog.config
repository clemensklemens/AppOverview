<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="logfile" xsi:type="File"
        fileName="${basedir}logs\AppOverview.log"
        keepFileOpen="true"
        encoding="utf-8"
        maxArchiveFiles="4"
        maxArchiveDays="30"
        archiveAboveSize="5242880"
        writeHeaderWhenInitialFileNotEmpty="true"
        createDirs="true"
        layout="${longdate}|${level:uppercase=true}|${logger}|${message}|${stacktrace:format=Flat}|${exception:format=tostring}"
		/>
    <target xsi:type="Console" name="console" layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Info" writeTo="console" />
    <logger name="*" minlevel="Info" writeTo="logfile" />
  </rules>
</nlog>
